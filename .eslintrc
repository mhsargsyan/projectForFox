{
  "extends": "eslint-config-airbnb",
  "plugins": [
    "webdriverio"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "webdriverio/wdio": true
  },
  "rules": {
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": 0,
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-underscore-dangle": 0,
    "no-console": 0
  }
}
